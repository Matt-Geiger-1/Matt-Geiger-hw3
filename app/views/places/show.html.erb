<h1><%= @place["name"] %></h1>

<p>
  <a href="/places">Back to places</a>
</p>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">Add a new entry</a>
</p>

<h2>Entries</h2>
<ul>
  <% for entry in @entries %>
    <li>
      <strong><%= entry["title"] %></strong>
      (<%= entry["occurred_on"] %>)<br>
      <%= entry["description"] %>
    </li>
  <% end %>
</ul>
